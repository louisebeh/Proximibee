<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wikitude.phonegapsamples" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Proximibee</name>
    <description> Hello
    </description>
    <author>
        Sebastien Pires, Loris Fochesato
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="phonegap-version" value="3.7.0" />
    <preference name="orientation" value="default" />
    <preference name="fullscreen" value="false" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="HideKeyboardFormAccessoryBar" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="internalOnly" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="ErrorUrl" value=""/>
    <preference name="KeepRunning" value="true"/>
    <preference name="DisallowOverscroll" value="false"/>
    <preference name="LoadingDialog" value=","/>
    <preference name="LoadUrlTimeoutValue" value="20000" />
    <preference name="disable-cursor" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <gap:platform name="ios" />
    <gap:platform name="android" />
    <gap:plugin name="org.apache.cordova.splashscreen"  />
    <icon src="www/assets/Proximibee.png" gap:platform="ios" width="57" height="57" />
    <icon src="www/assets/Proximibee.png" gap:platform="ios" width="72" height="72" />
    <icon src="www/assets/Proximibee.png" gap:platform="ios" width="114" height="114" />
    <icon src="www/assets/Proximibee.png" gap:platform="ios" width="144" height="144" />
    <icon src="www/assets/Proximibee.png" gap:platform="ios" width="76" height="76" />
    <icon src="www/assets/Proximibee.png" gap:platform="ios" width="120" height="120" />
    <icon src="www/assets/Proximibee.png" gap:platform="ios" width="152" height="152" />
    <icon src="www/assets/Proximibee.png" gap:platform="android" gap:density="ldpi" />
    <icon src="www/assets/Proximibee.png" gap:platform="android" gap:density="mdpi" />
    <icon src="www/assets/Proximibee.png" gap:platform="android" gap:density="hdpi" />
    <icon src="www/assets/Proximibee.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="www/assets/Proximibee.png" gap:platform="android" gap:density="xxhdpi" />
    <icon src="www/assets/Proximibee.png" gap:platform="android" gap:density="xxxhdpi" />
    <icon src="www/assets/Proximibee.png" />
    <gap:splash src="www/splash.png" />
    <preference name="SplashScreen" value="splash"/>
    <feature name="SplashScreen">
    <param name="ios-package" value="CDVSplashScreen" />
</feature>
</widget>
